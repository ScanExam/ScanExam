<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="720.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.istic.tools.scanexam.view.fX.ControllerRoot">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File corrector">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#loadTemplatePressedCorrector" text="Load Template" />
                  <MenuItem disable="true" mnemonicParsing="false" text="Load Student Copies" />
                  <MenuItem disable="true" mnemonicParsing="false" text="Save" />
              <MenuItem disable="true" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="File editor">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#createNewTemplatePressed" text="Create new Template" />
                  <MenuItem mnemonicParsing="false" onAction="#loadTemplatePressedEditor" text="Load Template" />
                  <MenuItem disable="true" mnemonicParsing="false" onAction="#SaveTemplatePressed" text="Save Template" />
                  <MenuItem disable="true" mnemonicParsing="false" text="Unspecified Action" />
                  <MenuItem disable="true" mnemonicParsing="false" text="Close" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#sendMail" text="%menu.edit.sendmail" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                  <CheckMenuItem disable="true" mnemonicParsing="false" text="Auto-zoom" />
                <MenuItem disable="true" mnemonicParsing="false" text="Reset zoom" />
              </items>
            </Menu>
          <Menu disable="true" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TabPane side="LEFT" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab fx:id="correctorTab" text="Corrector" />
          <Tab fx:id="editorTab" text="Editor" />
        </tabs>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TabPane>
      <HBox styleClass="botBar">
         <children>
            <Label text="Label" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Label" />
         </children>
      </HBox>
   </children>
</VBox>
