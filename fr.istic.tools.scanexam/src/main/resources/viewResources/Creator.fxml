                  <AnchorPane>
                     <children>
                        <Label fx:id="introLabel" style="-fx-text-fill: GREY;" text="Load PDF in file menu" />
                        <Pane fx:id="mainPane" onMouseDragged="#mainMouseEvent" onMousePressed="#mainMouseEvent" onMouseReleased="#mainMouseEvent" onScroll="#ZoomImage">
                           <children>
                              <ImageView fx:id="pdfView" fitHeight="1000.0" fitWidth="1000.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Pane>
                     </children>
                  </AnchorPane>
               </content>
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
      <HBox>
         <children>
            <Label text="Label" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Label" />
         </children>
      </HBox>
   </children>
</VBox>
