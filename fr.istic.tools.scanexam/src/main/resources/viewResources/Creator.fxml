<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="1280.0" stylesheets="@viewResources/MyStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.istic.tools.scanexam.view.fX.ControllerFXCreator">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#newTemplatePressed" text="New Template" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Load" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar>
        <items>
          <Button mnemonicParsing="false" onAction="#questionAreaPressed" text="Question area" />
            <Button fx:id="iDAreaPressed" mnemonicParsing="false" text="ID area" />
            <Button mnemonicParsing="false" onAction="#qRArearessed" text="QR area" />
            <Button mnemonicParsing="false" onAction="#movePressed" text="Move Camera" />
        </items>
      </ToolBar>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="5.0">
               <children>
                  <Label text="Questions :" />
                  <ListView fx:id="questionList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <Label text="Page " />
                  <ChoiceBox prefWidth="150.0" />
                  <HBox>
                     <children>
                        <Button mnemonicParsing="false" onAction="#previousPagePressed" text="prev" />
                        <Pane HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="pageNumberLabel" layoutX="12.0" layoutY="4.0" text="Label" />
                           </children></Pane>
                        <Button mnemonicParsing="false" onAction="#nextPagePressed" text="next" />
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <ScrollPane id="mainScrollPane" fitToHeight="true" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" styleClass="scrollPanes" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
