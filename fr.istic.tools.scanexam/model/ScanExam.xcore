package fr.istic.tools.scanexam

type File wraps java.io.File

class Exam {
	String filepath
	String label
	String folderPath
	int numberOfPages
	int scale
//	contains InfoFields[] info
	contains Question[] questions 
	 
}
class InfoField extends Question {
	
}

class Question {
	String label	
	contains ScanZone zone
	contains ScanZone markZone
	int defaultGradeIndex
	String[] grades
	String[] feedback 
	double weight
}

class ScanZone {
	
	int x
	int y
	int w
	int h
	int page
	op String toString() {
		"["+x+","+y+"]->["+(x+w)+","+(y+h)+"]@"+page
	}
}


class GradingData {
	String solutionPath
	String excelFileName
	File[] images
	contains Exam exam
	contains StudentGrade[] grades 	
	
}

class StudentGrade {
	String studentID
	long numAnonymat
	contains QuestionGrade[] questionGrades
}

class QuestionGrade {
	refers Question question
	boolean validated
	String filename
	String grade
}